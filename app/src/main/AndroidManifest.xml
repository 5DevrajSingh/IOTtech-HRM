            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.AttendancePanelActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.OverTimeActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".login.OtpMainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".login.OtpVerifyActivity"
            android:configChanges="orientation"
